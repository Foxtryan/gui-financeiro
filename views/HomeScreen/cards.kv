<CustomCard@MDCard>:
    md_bg_color: app.colors['background']

<CardLayout@MDBoxLayout>:
    orientation: 'vertical'
    md_bg_color: app.colors['background']
    radius: dp(18),dp(18),dp(18),dp(18)
    padding: 10, 10
    spacing: 5

<CardLabel@MDLabel>:
    color: app.colors['text']

<CardOne@CardLayout>:

    MDLabel:
        text: "Title"

<CardTwo@CardLayout>:


<CashFlow@CustomCard>:
    
    CardLayout:

        CardLabel:
            text: "Fluxo de Caixa"
            adaptive_size: True
            bold: True
            size_hint: 1, .11
            pos_hint: {'center_x': .5, 'center_y': .2}

        MDRelativeLayout:

            CardLabel:
                font_size: 14
                text: "Entradas:" 
                size_hint: .8, .095
                pos_hint: {'center_x': .5, 'center_y': .88}

            MDProgressBar:
                radius: 8
                size_hint_y: .1
                color: "#2e935f"
                size_hint: .8, .095
                pos_hint: {'x': 0.1, 'center_y': .75}
                #value: root.progress_entradas
                value: 50

            CardLabel:
                font_size: 14
                text: "Sa√≠das:"
                size_hint: .8, .095
                pos_hint: {'center_x': .5, 'center_y': .55}
                
            MDProgressBar:
                radius: 8
                size_hint_y: .1
                color: "#b95820"
                size_hint: .8, .095
                pos_hint: {'x': 0.1, 'center_y': .42}
                #value: root.progress_entradas
                value: 50

            CardLabel:
                id: lbl_valor_caixa
                text: "10.000,00"
                font_size: 26
                bold: True
                size_hint_x: .8
                halign: 'right'
                pos_hint: {'x': .1, 'y': -.35}

            CardLabel:
                text: "Caixa"
                font_style: "Overline"
                pos_hint: {'x': .1, 'y': -.39}
